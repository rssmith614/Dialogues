<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="0dp" android:top="2dp">
        <shape>
            <gradient android:angle="270"
                android:endColor="#80AEAEAE" android:startColor="#80DADADA" />
            <corners android:radius="10dp" />
            <padding android:bottom="2dp" android:left="0dp"
                android:right="0dp" android:top="0dp" />
        </shape>
    </item>
    <item android:top="2dp" android:left="0dp">
        <shape
            android:shape="rectangle" android:padding="10dp">
            <solid android:color="@color/translucent_blue" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>