<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dialogues" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_mode_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/solid_blue</item>
        <item name="colorSecondaryVariant">#006FA1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="fontFamily">@font/lexend</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
