<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dialogues" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/notwhite</item>
        <item name="colorOnPrimary">@color/notwhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/solid_blue</item>
        <item name="colorSecondaryVariant">#006FA1</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/lexend</item>
        <item name="fontFamily">@font/lexend</item>
    </style>

    <style name="Theme.Dialogues.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Dialogues.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Dialogues.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
